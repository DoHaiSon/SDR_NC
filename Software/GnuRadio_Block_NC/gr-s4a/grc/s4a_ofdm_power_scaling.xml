<?xml version="1.0"?>
<block>
	<name>OFDM Power Scaling</name>
	<key>s4a_ofdm_power_scaling</key>
	<category>Tools4SDR</category>
	<import>from s4a import *</import>
	<make>ofdm_power_scaling($fft_length, $preamble_coeff, $pilot_coeff,
                  $data_coeff, $preamble_block_rep, $pilot_block_rep,
                  $data_block_sz, $data_block_rep, $silence_block_rep)
  </make>
	<callback></callback>
	<param>
		<name>FFT Length</name>
		<key>fft_length</key>
		<value>128</value>
		<type>int</type>
	</param>
	<param>
		<name>Preamble Coefficient</name>
		<key>preamble_coeff</key>
		<value>1/9.6571</value>
		<type>real</type>
	</param>
	<param>
		<name>Pilot Coefficient</name>
		<key>pilot_coeff</key>
		<value>1/13.9017</value>
		<type>real</type>
	</param>
	<param>
		<name>Data Coefficient</name>
		<key>data_coeff</key>
		<value>1/32.0</value>
		<type>real</type>
	</param>
	<param>
		<name>Preamble Block Rep</name>
		<key>preamble_block_rep</key>
		<value>1</value>
		<type>int</type>
	</param>
	<param>
		<name>Pilot Block Rep</name>
		<key>pilot_block_rep</key>
		<value>1</value>
		<type>int</type>
	</param>
	<param>
		<name>Data Block Size</name>
		<key>data_block_sz</key>
		<value>1</value>
		<type>int</type>
	</param>
	<param>
		<name>Data Block Rep</name>
		<key>data_block_rep</key>
		<value>1</value>
		<type>int</type>
	</param>
	<param>
		<name>Silence Block Rep</name>
		<key>silence_block_rep</key>
		<value>1</value>
		<type>int</type>
	</param>
	<sink>
		<name>in</name>
		<type>complex</type>
		<vlen>$fft_length</vlen>
	</sink>
	<source>
		<name>out</name>
		<type>complex</type>
		<vlen>$fft_length</vlen>
	</source>
</block>
