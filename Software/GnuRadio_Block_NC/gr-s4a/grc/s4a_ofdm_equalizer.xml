<?xml version="1.0"?>
<block>
	<name>OFDM Equalizer</name>
	<key>s4a_ofdm_equalizer</key>
	<category>Tools4SDR</category>
	<import>from s4a import *</import>
	<make>ofdm_equalizer($fft_length,$occupied_tones,$cp_length,
                       $preamble_block_rep, $pilot_block_rep,
                       $data_block_sz, $data_block_rep,
                        $silence_block_rep,$verbose)
	</make>
	<callback></callback>
	<param>
		<name>FFT Length</name>
		<key>fft_length</key>
		<value>128</value>
		<type>int</type>
	</param>
	<param>
		<name>Occupied Tones</name>
		<key>occupied_tones</key>
		<value>52</value>
		<type>int</type>
	</param>
	<param>
		<name>Cyclic Prefix Length</name>
		<key>cp_length</key>
		<value>16</value>
		<type>int</type>
	</param>
	<param>
		<name>Preamble Block Rep</name>
		<key>preamble_block_rep</key>
		<value>1</value>
		<type>int</type>
	</param>
	<param>
		<name>Pilot Block Rep</name>
		<key>pilot_block_rep</key>
		<value>1</value>
		<type>int</type>
	</param>
	<param>
		<name>Data Block Size</name>
		<key>data_block_sz</key>
		<value>1</value>
		<type>int</type>
	</param>
	<param>
		<name>Data Block Rep</name>
		<key>data_block_rep</key>
		<value>1</value>
		<type>int</type>
	</param>
	<param>
		<name>Silence Block Rep</name>
		<key>silence_block_rep</key>
		<value>1</value>
		<type>int</type>
	</param>
	<param>
		<name>Verbose</name>
		<key>verbose</key>
		<value>0</value>
		<type>enum</type>
		<option>
			<name>Enable</name>
			<key>1</key>
		</option>
		<option>
			<name>Disable</name>
			<key>0</key>
		</option>
	</param>
	<sink>
		<name>in</name>
		<type>complex</type>
		<vlen>$fft_length</vlen>
	</sink>
	<source>
		<name>syms</name>
		<type>complex</type>
		<vlen>($occupied_tones*$data_block_sz)</vlen>
	</source>
	<source>
		<name>h</name>
		<type>complex</type>
		<vlen>$occupied_tones</vlen>
	</source>
	<source>
		<name>SNR</name>
		<type>float</type>
	</source>
</block>
