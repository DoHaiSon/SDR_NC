<?xml version="1.0"?>
<block>
  <name>Hybrid Serrial-Stream Controller</name>
  <key>CogNC_hybrid_stream_control</key>
  <category>CogNC</category>
  <import>import CogNC</import>
  <make>CogNC.hybrid_stream_control($ofdm_stream_length, $vfdm_stream_length)</make>

  <param>
    <name>OFDM Stream Length</name>
    <key>ofdm_stream_length</key>
    <type>int</type>
  </param>

  <param>
    <name>VFDM Stream Length</name>
    <key>vfdm_stream_length</key>
    <type>int</type>
  </param>

  <sink>
    <name>ofdm_stream</name>
    <type>complex</type>
  </sink>

  <sink>
    <name>vfdm_stream</name>
    <type>complex</type>
  </sink>
  
  <source>
    <name>hybrid_stream</name>
    <type>complex</type>
  </source>
</block>
